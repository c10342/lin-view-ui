{
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "react",
        "vue"
    ],
    "stylelint.validate": [
        "css",
        "less",
        "postcss",
        "scss",
        "sass"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll.stylelint": true
    }
  }